<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/constraintLayout"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTitleNoLimit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Without limits"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvTitleLimit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".3" />


    <TextView
        android:id="@+id/tvTitleLimit"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="With Limits"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitleNoLimit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvTitleNoLimit"
        app:layout_constraintTop_toTopOf="@id/tvTitleNoLimit" />


    <ImageView
        android:id="@+id/ivFootball"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_baseline_sports_soccer_24"
        app:layout_constraintEnd_toEndOf="@+id/tvTitleNoLimit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvTitleNoLimit"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleNoLimit"
        app:tint="#616161" />

    <ImageView
        android:id="@+id/ivBasketBall"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_baseline_sports_basketball_24"
        app:layout_constraintEnd_toEndOf="@+id/tvTitleLimit"
        app:layout_constraintStart_toStartOf="@+id/tvTitleLimit"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleLimit"
        app:tint="#FFA000" />

</androidx.constraintlayout.widget.ConstraintLayout>